}

.section{    
  position: relative;
  padding: 10rpx 0;
  border-bottom: 1px solid #f3f3f3;
}

.picker{
display:inline-block; 
/* margin-left: auto; */
font-size: 28rpx;
}

.picker-content{
display: inline-block;
margin-left: 64rpx;
font-size: 28rpx;
}

.shouquan-container{
  display: flex;
}

.shouquan-container text{
  margin-right: 100rpx;
}

.shouquan-container .attachment{
  margin-left: -36rpx;
  width: 30rpx;
  height: 30rpx; 
}

.form {
  /* margin-top: 10rpx; */
  background: white;
  font-size: 28rpx;
  font-family:微软雅黑;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 0;
  margin-left: 0rpx;
  margin-right: 20rpx;
  border-radius: 4px;
}

.input-group {
  position: relative;
  padding: 10rpx 0;
  border-bottom: 1px solid #f3f3f3;
}

.input-group label {
  display: inline-block;
  width: 28%;
}

.input-group input{
  display: inline-block;
  border: none;
  width: 55%;
  height: auto;
  min-height: auto;
  overflow: inherit;
  padding-left: 5px;
}

.input-group textarea {
  display: inline-block;
  width: 65%;
  vertical-align: top;
  height: 60rpx;
  padding-left: 5px;
}

.input-group .request-texts {
  color: #7f7f7f;
}

.input-group .error-icon {
  position: absolute;
  top: 50%;
  right: 8%;
  margin-top: -8px;
}

.input-group.error input, .input-group.error textarea {
  outline: 1px solid red;
}

.dz-btn {
  margin-top: 20rpx;
  background: #61a1ff;
  color: white;
  line-height: 30rpx;
  text-align: center;
  border:1px solid #538bdf;    
  border-top-color: #84a5d7;
  border-radius: 4px;
}

