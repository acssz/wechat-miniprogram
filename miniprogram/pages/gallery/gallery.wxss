@import "../../style/guide.wxss";

.category {
  /* margin-top: 40rpx; */
  background: #61a1ff;
  color: white;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #538bdf;    
  border-top-color: #84a5d7;
  border-radius: 10rpx;
  margin: 0 100rpx;
}

.category .name {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 60rpx;
  letter-spacing: 16rpx;
  color: white;
}

.tips {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
  color: #61a1ff;
  font-size: 28rpx;
}

.icon {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx 10rpx;
}

.info {
  width: 100%;
  padding: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.info .name {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 28rpx;
  color: #495057;
}

.info .address {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: #6c757d;
}

.info .detail {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: #61a1ff;
}