@import "../../style/guide.wxss";

.guide .counter {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;
}

.title {
  /* margin-top: 40rpx; */
  background: #61a1ff;
  color: white;
  line-height: 60rpx;
  text-align: center;
  border:1px solid #538bdf;    
  border-top-color: #84a5d7;
  border-radius: 4px;
  margin: 0 100rpx;
}

.tips{
padding-top: 20rpx;
padding-bottom: 10rpx;
text-align: center;
color: #61a1ff;
font-size: 24rpx;
}

.form {
  /* margin-top: 10rpx; */
  background: white;
  font-size: 28rpx;
  font-family:微软雅黑;
  padding-left: 42rpx;
  padding-bottom: 0;
}

.forum-public {
  position: relative;
  width: 50%;
  height: 380rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.forum-item {
  margin: 0 auto;
  background-color: #fff;
}

.forum-item > image {
  border-radius: 16rpx;
  position: absolute;
  border: outset purple;
}

.forum-item > text {
  position: absolute;
  margin: auto;
  color: white;
  text-align: center;
}

.forum-item .card-bg {
  width: 100%;
  height: 100%;
  filter: blur(0rpx) brightness(99%) contrast(101%);
}
