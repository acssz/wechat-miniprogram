.vipcard-public {
  position: relative;
  width: 90%;
  height: 440rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.vipcard-item {
  margin: 0 auto;
  background-color: #fff;
}

.vipcard-item > image {
  border-radius: 16rpx;
  position: absolute;
  border: outset gold;
}

.vipcard-item > text {
  position: absolute;
  margin: auto;
  color: white;
  text-align: center;
}

.vipcard-item .card-bg {
  width: 100%;
  height: 100%;
  filter: blur(0rpx) brightness(99%) contrast(101%);
}

.vipcard-item .org-name {
  top: 10%;
  left: 8%;
  font-size: 30rpx;
}

.vipcard-item .org-logo {
  width: 15%;
  height: 30%;
  top: 4%;
  right: 4%;
  filter: brightness(110%) contrast(110%);
  /* font-size: 30rpx; */
}

